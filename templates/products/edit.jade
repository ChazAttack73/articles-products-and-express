extends ./../layout

block content
  form(action="/products/#{product.id}" method="POST" enctype="application/x-www-form-urlencoded")
    input(type="hidden" name="_method" value="PUT")
    span Name &nbsp
    input(type="text" value="#{product.name}" name="name")
    br
    span Price &nbsp
    input(type='text' value="#{product.price}" name="price")
    br
    span Inventory &nbsp
    input(type='text' value="#{product.inventory}" name="inventory")
    br
    input(type='submit' value="submit")
